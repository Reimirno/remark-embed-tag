{
  "transform": {
    "^.+\\.(j|t)sx?$": [
      "ts-jest"
    ]
  },
  "transformIgnorePatterns": [
    "node_modules/?!remark-parse"
  ],
  "moduleNameMapper": {
    "^(\\.\\.?\\/.+)\\.js$": "$1"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "collectCoverage": true
}